<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/system_accent3_900"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#e6ffffff"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1a1f2e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Callsign Information"
                        android:fontFamily="@font/roboto"
                        android:textAlignment="center"
                        android:letterSpacing="0.02"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#546e7a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="License and station details"
                        android:fontFamily="@font/roboto"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#e6ffffff"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/loading_container"
                        android:padding="32dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginBottom="16dp"
                            android:indeterminateTint="#004277"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#546e7a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Looking up callsign..."
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/results_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardBackgroundColor="#f0f8ff"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#546e7a"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Callsign"
                                    android:textAllCaps="true"
                                    android:fontFamily="@font/roboto"
                                    android:letterSpacing="0.1"/>
                                <TextView
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="#004277"
                                    android:id="@+id/callsign_display"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text=""
                                    android:fontFamily="@font/roboto"
                                    android:letterSpacing="0.2"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#f9f9f9"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="#1a1f2e"
                                android:id="@+id/result_text"
                                android:padding="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No results to display"
                                android:lineSpacingMultiplier="1.4"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/roboto"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/error_container"
                        android:padding="32dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="16dp"
                            android:src="@android:drawable/ic_dialog_alert"
                            android:tint="#ff6b6b"
                            android:alpha="0.6"/>
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#ff6b6b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Lookup Failed"
                            android:fontFamily="@font/roboto"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#546e7a"
                            android:id="@+id/error_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unable to find information for this callsign"
                            android:fontFamily="@font/roboto"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#e6ffffff"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="#e3f2fd"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <Button
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#004277"
                            android:id="@+id/copy_button"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Copy"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.03"
                            android:paddingVertical="14dp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="#004277"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <Button
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/close_button"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Close"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.03"
                            android:paddingVertical="14dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
