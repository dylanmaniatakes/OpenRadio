<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0f1419"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/gradient_header"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DMR Configuration"
                            android:shadowColor="#80000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="4"
                            android:fontFamily="@font/roboto"
                            android:textAlignment="center"
                            android:letterSpacing="0.02"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#b0ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Configure your DMR digital settings"
                            android:fontFamily="@font/roboto_regular"
                            android:textAlignment="center"
                            android:letterSpacing="0.03"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#ffd700"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ffd700"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FREQUENCY SETTINGS"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RX Frequency"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <EditText
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textColorHint="#b0ffffff"
                            android:id="@+id/rx_freq"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Default: 401.0250MHz"
                            android:inputType="numberDecimal"
                            android:fontFamily="@font/roboto"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TX Frequency"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <EditText
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textColorHint="#b0ffffff"
                            android:id="@+id/tx_freq"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Default: 401.0250MHz"
                            android:inputType="numberDecimal"
                            android:fontFamily="@font/roboto"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#4caf50"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#4caf50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONTACTS"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/localID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your DMR ID"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <EditText
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textColorHint="#b0ffffff"
                            android:id="@+id/local_id"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Default: 888"
                            android:inputType="number"
                            android:fontFamily="@font/roboto"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talk Group ID"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <EditText
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textColorHint="#b0ffffff"
                            android:id="@+id/tx_contact"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Default: 1"
                            android:inputType="number"
                            android:fontFamily="@font/roboto"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Type"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Spinner
                            android:id="@+id/contact_type_spinner"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#e0e0e0"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#e0e0e0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DMR PROTOCOL SETTINGS"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Power Level"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Spinner
                            android:id="@+id/power_spinner"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color Code (0-15)"
                        android:fontFamily="@font/roboto"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#b0ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Network identification code"
                        android:fontFamily="@font/roboto_regular"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Spinner
                            android:id="@+id/color_code_spinner"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Slot"
                        android:fontFamily="@font/roboto"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#b0ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="DMR time division slot (1 or 2)"
                        android:fontFamily="@font/roboto_regular"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Spinner
                            android:id="@+id/outbound_slot_spinner"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/advanced_settings_card"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#ffa500"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ffa500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADVANCED SETTINGS"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RX Group"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <EditText
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textColorHint="#b0ffffff"
                            android:id="@+id/group_list"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter RX group"
                            android:fontFamily="@font/roboto"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inbound Time Slot"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Spinner
                            android:id="@+id/inbound_slot_spinner"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Channel Mode"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Spinner
                            android:id="@+id/channel_mode_spinner"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <androidx.appcompat.widget.AppCompatButton
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffa500"
                            android:id="@+id/toggle_advanced_button"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Show Advanced Settings"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.03"
                            android:paddingVertical="16dp"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="#1a4caf50"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">
                            <androidx.appcompat.widget.AppCompatButton
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#4caf50"
                                android:id="@+id/save_button"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Save"
                                android:textAllCaps="false"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0.03"
                                android:paddingVertical="16dp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardBackgroundColor="#1aff5252"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">
                            <androidx.appcompat.widget.AppCompatButton
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#ff5252"
                                android:id="@+id/cancel_button"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cancel"
                                android:textAllCaps="false"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0.03"
                                android:paddingVertical="16dp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
