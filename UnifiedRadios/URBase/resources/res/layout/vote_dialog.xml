<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/system_accent3_900"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#e6ffffff"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1a1f2e"
                        android:id="@+id/dialogTitle"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Community Score"
                        android:fontFamily="@font/roboto"
                        android:textAlignment="center"
                        android:letterSpacing="0.02"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#f0f8ff"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <TextView
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#004277"
                            android:id="@+id/dialogCallsign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="W1AW"
                            android:fontFamily="@font/roboto"
                            android:textAlignment="center"
                            android:letterSpacing="0.2"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="12dp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#e8f5e8"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2e7d32"
                            android:id="@+id/dialogScore"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score: 8.5/10"
                            android:fontFamily="@font/roboto"
                            android:textAlignment="center"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#e6ffffff"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1a1f2e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Community Notes"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#f9f9f9"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#546e7a"
                            android:id="@+id/notesSection"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:text="No community notes available for this repeater."
                            android:lineSpacingMultiplier="1.3"
                            android:textIsSelectable="true"
                            android:fontFamily="@font/roboto"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#f5f5f5"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <EditText
                            android:textSize="16sp"
                            android:textColor="#1a1f2e"
                            android:textColorHint="#757575"
                            android:gravity="top"
                            android:id="@+id/noteInput"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="120dp"
                            android:hint="Add your note about this repeater..."
                            android:fontFamily="@font/roboto"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#e6ffffff"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1a1f2e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Rate This Repeater"
                        android:fontFamily="@font/roboto"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="#e8f5e8"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">
                            <Button
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#2e7d32"
                                android:id="@+id/upvoteButton"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="�� Upvote"
                                android:textAllCaps="false"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0.03"
                                android:paddingVertical="14dp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardBackgroundColor="#ffebee"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">
                            <Button
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#d32f2f"
                                android:id="@+id/downvoteButton"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="�� Downvote"
                                android:textAllCaps="false"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0.03"
                                android:paddingVertical="14dp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#f3e5f5"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <Button
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#7b1fa2"
                            android:id="@+id/addNoteButton"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="�� Add Note"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.03"
                            android:paddingVertical="14dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/repeateractions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#e6ffffff"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1a1f2e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Repeater Actions"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#004277"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <Button
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/programButton"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="�� Program Radio to this Channel"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.03"
                            android:paddingVertical="16dp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#fff3e0"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <Button
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#f57c00"
                            android:id="@+id/requestUpdateButton"
                            android:background="?android:attr/selectableItemBackground"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="�� Request Repeater Update"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.03"
                            android:paddingVertical="14dp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#ffebee"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <Button
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#d32f2f"
                            android:id="@+id/toggleOfflineButton"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="⚠️ Report Repeater Offline"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.03"
                            android:paddingVertical="14dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#e6ffffff"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#546e7a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <Button
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/closeButton"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Close"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.03"
                            android:paddingVertical="14dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
