<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#1a1f2e"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/gradient_header"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/callsign"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.02"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="#b0ffffff"
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.03"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    app:tint="#ffd700"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ffd700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FREQUENCY"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:id="@+id/frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#ffd700"
                    android:id="@+id/score"
                    android:background="@drawable/button_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:backgroundTint="#1affd700"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"/>
            </LinearLayout>
            <View
                android:background="#1affffff"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    app:tint="#4caf50"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#4caf50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MODE"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:id="@+id/mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/toneContainer"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    app:tint="#e0e0e0"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#e0e0e0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TONE"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:id="@+id/tone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/dmrInfoContainer"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        app:tint="#ffa500"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="12sp"
                            android:textColor="#ffa500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DIGITAL INFO"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/dmrTS1Info"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/roboto_regular"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#b0ffffff"
                            android:id="@+id/dmrTS2Info"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/offlineIndicator"
            android:background="#1aff5252"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@drawable/circle_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#ff5252"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#ff5252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REPEATER REPORTED OFFLINE"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.05"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
