<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0d1117"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/waiting"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/waiting"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/roipheader"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/headerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select DMR Talkgroup"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.02"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#b0ffffff"
            android:id="@+id/headerSubtitle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Choose a talkgroup for your ROIP channel"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing="0.03"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/networkSelectorCard"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#1a1f2e"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="#66bb6a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Select Network"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.1"/>
            <Spinner
                android:id="@+id/networkSpinner"
                android:background="@drawable/spinner_background_dark"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#1a1f2e"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="12dp"
                app:tint="#64b5f6"/>
            <EditText
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:textColorHint="#80ffffff"
                android:id="@+id/searchTalkgroup"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Search talkgroups (ID or name)..."
                android:maxLines="1"
                android:layout_weight="1"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:fontFamily="@font/roboto_regular"/>
            <ProgressBar
                android:id="@+id/searchProgress"
                android:visibility="gone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:indeterminateTint="#64b5f6"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/networkInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="#1a1f2e"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_network"
                android:layout_marginEnd="12dp"
                app:tint="#66bb6a"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="12sp"
                    android:textColor="#66bb6a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NETWORK"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.1"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:id="@+id/currentNetwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
            <TextView
                android:textSize="14sp"
                android:textColor="#80ffffff"
                android:id="@+id/talkgroupCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/serverInfoCard"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="#1a1f2e"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_server"
                android:layout_marginEnd="12dp"
                app:tint="#ffb74d"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffb74d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SERVER"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.1"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:id="@+id/currentServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:scrollbarStyle="outsideOverlay"
        android:id="@+id/talkgroupRecyclerView"
        android:paddingBottom="16dp"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="true"
        android:layout_marginHorizontal="16dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/emptyState"
        android:padding="32dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_search_off"
            app:tint="#40ffffff"/>
        <TextView
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="No items found"
            android:fontFamily="@font/roboto"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#80ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try adjusting your search terms"
            android:fontFamily="@font/roboto_regular"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#161b22"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:id="@+id/backButton"
            android:background="@drawable/button_secondary"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="80dp"
            android:text="Back"
            android:fontFamily="@font/roboto"
            android:layout_marginEnd="6dp"
            android:letterSpacing="0.02"
            android:paddingHorizontal="12dp"/>
        <Button
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:id="@+id/cancelButton"
            android:background="@drawable/button_secondary"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Cancel"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:layout_marginEnd="6dp"
            android:letterSpacing="0.02"/>
        <Button
            android:enabled="false"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:id="@+id/selectButton"
            android:background="@drawable/button_primary"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Select"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="6dp"
            android:letterSpacing="0.02"/>
    </LinearLayout>
</LinearLayout>
