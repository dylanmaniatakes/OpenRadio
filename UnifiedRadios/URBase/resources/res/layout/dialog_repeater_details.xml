<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#1a1f2e"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:id="@+id/tvRepeaterCallsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="KC1ABC"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#b0b0b0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Frequencies:"
            android:layout_weight="1"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:id="@+id/tvRepeaterFrequencies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="RX: 146.520 MHz | TX: 146.520 MHz"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#b0b0b0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mode:"
            android:layout_weight="1"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4caf50"
            android:id="@+id/tvRepeaterMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FM"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#b0b0b0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tone/TG:"
            android:layout_weight="1"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:id="@+id/tvRepeaterTone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="67.0 Hz"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#b0b0b0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:layout_weight="1"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:id="@+id/tvRepeaterLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Boston, MA"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#b0b0b0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:layout_weight="1"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ffc107"
            android:id="@+id/tvRepeaterDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12.5 miles"
            android:layout_weight="2"/>
    </LinearLayout>
    <Button
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/btnProgramRepeater"
        android:background="@drawable/program_button_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="�� Program Repeater"/>
</LinearLayout>
