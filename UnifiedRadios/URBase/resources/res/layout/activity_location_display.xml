<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0d1117"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/location_share_normal"
                    android:layout_marginEnd="12dp"
                    app:tint="#64b5f6"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOCATION INFORMATION"
                        android:fontFamily="@font/roboto"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#b0ffffff"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Address, intersection, and coordinate information"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        android:layout_marginEnd="8dp"
                        app:tint="#66bb6a"/>
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#66bb6a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APPROXIMATE ADDRESS"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:id="@+id/address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading address..."
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_directions"
                        android:layout_marginEnd="8dp"
                        app:tint="#ff9800"/>
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#ff9800"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEAREST INTERSECTION"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:id="@+id/intersection_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Finding nearest intersection..."
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="@font/roboto"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:layout_marginEnd="8dp"
                        app:tint="#e91e63"/>
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#e91e63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPS COORDINATES"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:id="@+id/coordinates_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.000000, 0.000000"
                    android:fontFamily="@font/roboto"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:layout_marginEnd="8dp"
                        app:tint="#2196f3"/>
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2196f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMATEUR RADIO GRID"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:id="@+id/maidenhead_grid_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculating grid..."
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="#80ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Maidenhead Locator System (6-character)"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_compass"
                        android:layout_marginEnd="8dp"
                        app:tint="#00bcd4"/>
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#00bcd4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USNG COORDINATES"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:id="@+id/usng_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculating USNG..."
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="#80ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="United States National Grid (emergency services format)"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:layout_marginEnd="8dp"
                        app:tint="#9c27b0"/>
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#9c27b0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LAST UPDATE"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:id="@+id/last_update_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Never updated"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <Button
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/refresh_button"
                android:background="@drawable/button_primary"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Refresh Location"
                android:drawablePadding="8dp"
                android:layout_weight="1"
                android:drawableStart="@android:drawable/ic_menu_rotate"
                android:fontFamily="@font/roboto"
                android:layout_marginEnd="8dp"
                android:drawableTint="#ffffff"/>
            <Button
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/clear_button"
                android:background="@drawable/button_secondary"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Clear Data"
                android:drawablePadding="8dp"
                android:layout_weight="1"
                android:drawableStart="@android:drawable/ic_menu_delete"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="8dp"
                android:drawableTint="#ffffff"/>
        </LinearLayout>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminateTint="#64b5f6"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#6b7280"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="�� Location data includes GPS coordinates and USNG format for emergency services compatibility. Data is automatically cached for better performance."
            android:lineSpacingExtra="2dp"
            android:fontFamily="@font/roboto_regular"/>
    </LinearLayout>
</ScrollView>
