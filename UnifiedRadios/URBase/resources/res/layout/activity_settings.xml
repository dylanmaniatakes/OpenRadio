<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0f1419"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/settingsTopLevelView"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/gradient_header"
                        android:padding="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp">
                        <TextView
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/settingsToolbarTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="App Settings"
                            android:shadowColor="#80000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="4"
                            android:fontFamily="@font/roboto"
                            android:textAlignment="center"
                            android:letterSpacing="0.02"/>
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:textColor="#b0ffffff"
                            android:id="@+id/appver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App Version"
                            android:fontFamily="@font/roboto_regular"
                            android:textAlignment="center"
                            android:letterSpacing="0.03"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#ffd700"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ffd700"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USER INFORMATION"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/Calltext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Callsign/UserID:"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/RegCallSign"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not Registered"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/DMRID1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your DMR ID:"
                        android:fontFamily="@font/roboto"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/DMRID2"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not Registered"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"/>
                    </androidx.cardview.widget.CardView>
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="@color/primary_deselected"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Your callsign"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary_deselected"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/callsignTextInputEditText"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:maxLength="10"
                            android:textAllCaps="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#4caf50"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#4caf50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RADIO SETTINGS"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Switch
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/MarsSwitch"
                            android:padding="16dp"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enable Out of Band TX (MARS/CAP Members)"
                            android:fontFamily="@font/roboto"
                            android:thumbTint="#00ff00"
                            android:trackTint="#666666"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Switch
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/DisablePTT"
                            android:padding="16dp"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textOff="Off"
                            android:text="PTT/TX Disable (RX Only)"
                            android:fontFamily="@font/roboto"
                            android:thumbTint="#00ff00"
                            android:trackTint="#fdfdfd"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Squelch"
                        android:fontFamily="@font/roboto"
                        android:labelFor="@+id/squelchSlider"/>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <com.google.android.material.slider.Slider
                            android:id="@+id/squelchSlider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:stepSize="1"
                            android:valueFrom="0"
                            android:valueTo="8"
                            app:labelBehavior="gone"
                            app:thumbColor="#4caf50"
                            app:trackColorActive="#4caf50"
                            app:trackColorInactive="#1a4caf50"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#e0e0e0"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#e0e0e0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DISPLAY SETTINGS"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Switch
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/metricEnable"
                            android:padding="16dp"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Metric Display Enable"
                            android:fontFamily="@font/roboto"
                            android:thumbTint="#00ff00"
                            android:trackTint="#ffffff"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Switch
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/DisRXEnable"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Turn on Display during Receive"
                            android:fontFamily="@font/roboto"
                            android:thumbTint="#00ff00"
                            android:trackTint="#666666"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#ffa500"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ffa500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AUDIO FILTERS"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Switch
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/emphasisSwitch"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pre- &amp; De-emphasis"
                            android:fontFamily="@font/roboto"
                            android:thumbTint="#00ff00"
                            android:trackTint="#666666"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Switch
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/highpassSwitch"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Highpass Filter"
                            android:fontFamily="@font/roboto"
                            android:thumbTint="#00ff00"
                            android:trackTint="#666666"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Switch
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/lowpassSwitch"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lowpass Filter"
                            android:fontFamily="@font/roboto"
                            android:thumbTint="#00ff00"
                            android:trackTint="#666666"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#ff5252"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ff5252"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADVANCED SETTINGS"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Switch
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/HidePTTSwitch"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hide On Screen PTT"
                            android:fontFamily="@font/roboto"
                            android:thumbTint="#00ff00"
                            android:trackTint="#666666"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Switch
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/stickyPTTSwitch"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sticky PTT"
                            android:fontFamily="@font/roboto"
                            android:thumbTint="#00ff00"
                            android:trackTint="#666666"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <Switch
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/noAnimationsSwitch"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Disable Animations"
                            android:fontFamily="@font/roboto"
                            android:thumbTint="#00ff00"
                            android:trackTint="#666666"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#9c27b0"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#9c27b0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device INFORMATION"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#b0ffffff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Device Nickname"
                                android:fontFamily="@font/roboto"/>
                            <TextView
                                android:textSize="16sp"
                                android:textColor="#ffffff"
                                android:id="@+id/nicknameinfo"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="My Device"
                                android:fontFamily="@font/roboto"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <com.google.android.material.button.MaterialButton
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/updateFirmwareButton1"
                        android:padding="16dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Update Firmware"
                        android:onClick="firmwareUpdateClicked"
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto"
                        app:backgroundTint="#9c27b0"
                        app:cornerRadius="12dp"
                        app:elevation="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#9c27b0"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#9c27b0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SYSTEM INFORMATION"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#b0ffffff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AuthCode"
                                android:fontFamily="@font/roboto"/>
                            <TextView
                                android:textSize="16sp"
                                android:textColor="#ffffff"
                                android:id="@+id/authcodeinfo"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="AuthCode"
                                android:fontFamily="@font/roboto"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <com.google.android.material.button.MaterialButton
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/updateFirmwareButton"
                        android:padding="16dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Update Firmware"
                        android:onClick="firmwareUpdateClicked"
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto"
                        app:backgroundTint="#9c27b0"
                        app:cornerRadius="12dp"
                        app:elevation="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            app:tint="#9c27b0"/>
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#9c27b0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RF INFORMATION"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#252a3a"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#b0ffffff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RF Firmware"
                                android:fontFamily="@font/roboto"/>
                            <TextView
                                android:textSize="16sp"
                                android:textColor="#ffffff"
                                android:id="@+id/rfinfo"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="RF Firmware"
                                android:fontFamily="@font/roboto"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1a1f2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#1a4caf50"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <Button
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4caf50"
                            android:id="@+id/doneButton"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Done"
                            android:onClick="doneButtonClicked"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.03"
                            android:paddingVertical="16dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
