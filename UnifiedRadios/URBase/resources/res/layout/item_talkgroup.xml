<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/card_lift"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="#1a1f2e"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/selectionIndicator"
            android:background="@drawable/selection_indicator"
            android:visibility="invisible"
            android:layout_width="4dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#64b5f6"
                    android:id="@+id/talkgroupId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.02"/>
                <View
                    android:background="@drawable/circle_dot"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="12dp"
                    app:tint="#40ffffff"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#80ffffff"
                    android:id="@+id/talkgroupNetwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.05"/>
            </LinearLayout>
            <TextView
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:id="@+id/talkgroupDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:fontFamily="@font/roboto_regular"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#80ffffff"
                android:ellipsize="end"
                android:id="@+id/talkgroupFullDescription"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/actionIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_radio_button_unchecked"
            android:layout_marginStart="16dp"
            app:tint="#40ffffff"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
