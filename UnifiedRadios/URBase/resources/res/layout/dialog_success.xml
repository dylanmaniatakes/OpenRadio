<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="#1e1e1e"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#4caf50"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/success_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_check_on"
                android:contentDescription="Success"
                app:tint="#ffffff"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#4caf50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Success!"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.02"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:id="@+id/success_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:lineSpacingExtra="4dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto_regular"
            android:textAlignment="center"/>
        <com.google.android.material.button.MaterialButton
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/success_ok_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Awesome!"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.02"
            app:backgroundTint="#4caf50"
            app:cornerRadius="28dp"
            app:elevation="0dp"
            app:rippleColor="#80ffffff"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:alpha="0.6">
            <View
                android:background="@drawable/circle_rx"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4caf50"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto-dismiss in 3 seconds"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
