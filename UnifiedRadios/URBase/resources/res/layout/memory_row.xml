<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/memoryContainer"
    android:tag="layout/memory_row_0"
    android:paddingLeft="8dp"
    android:paddingTop="4dp"
    android:paddingRight="8dp"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:textColor="@color/primary_deselected"
        android:layout_gravity="center"
        android:id="@+id/memoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simplex"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:textSize="36dp"
        android:textColor="@color/primary_deselected"
        android:layout_gravity="center"
        android:id="@+id/memoryFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="146.5200"
        android:fontFamily="@font/roboto"/>
    <ImageButton
        android:layout_gravity="right"
        android:id="@+id/memoryMenu"
        android:background="@drawable/ic_menu"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="-56dp"
        android:layout_marginRight="16dp"
        android:contentDescription="Memory menu"/>
</androidx.appcompat.widget.LinearLayoutCompat>
