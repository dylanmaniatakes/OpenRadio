<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#f5f5f5"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="48sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="��"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center"
            android:id="@+id/empty_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No satellites currently visible"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#666"
            android:gravity="center"
            android:id="@+id/empty_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Satellites will appear here when they pass overhead"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#999"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="�� Tip: Make sure location services are enabled"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
