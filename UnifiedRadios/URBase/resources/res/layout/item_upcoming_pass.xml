<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:id="@+id/satellite_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FO-29"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/quality_badge"
                android:background="@drawable/quality_good_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Pass"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:id="@+id/countdown_timer"
            android:background="@drawable/countdown_bg"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="T-15m 30s"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/timing_bg"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1565c0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ Pass Timing"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/timing_item_bg"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="START (AOS)"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1565c0"
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:25:30"
                        android:fontFamily="monospace"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/timing_item_bg"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp">
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAX ELEV"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1565c0"
                        android:id="@+id/max_elevation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45.2°"
                        android:fontFamily="monospace"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="#666"
                        android:id="@+id/max_elev_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:30:15"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/timing_item_bg"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp">
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="END (LOS)"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1565c0"
                        android:id="@+id/end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:35:00"
                        android:fontFamily="monospace"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="#666"
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9m 30s"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/frequency_box_bg"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="�� Satellite Information"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#007bff"
                android:id="@+id/frequency_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="↑ 145.900-146.000 MHz\10↓ 435.800-435.900 MHz"
                android:fontFamily="monospace"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <TextView
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: "/>
                <TextView
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:id="@+id/satellite_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Linear Transponder"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#28a745"
                    android:id="@+id/satellite_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
