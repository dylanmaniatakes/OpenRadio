<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cc000000"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:id="@+id/error_popup_container"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardBackgroundColor="#1a1f2e"
        app:cardCornerRadius="16dp"
        app:cardElevation="24dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/glow_background"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/error_accent"
                    android:background="#f44336"
                    android:visibility="gone"
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.8"
                    android:elevation="2dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#f44336"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/error_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_group"
                        app:tint="#ffffff"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/error_title"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Error"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.05"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#b0ffffff"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/error_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Something went wrong"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.02"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="#0d1117"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="12sp"
                            android:textColor="#f44336"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="ERROR DETAILS"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.1"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/error_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="An unexpected error occurred. Please try again."
                            android:lineSpacingExtra="2dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/error_code_card"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="#0d1117"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_network"
                            android:layout_marginEnd="12dp"
                            app:tint="#ff9800"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#ff9800"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ERROR CODE"
                                android:textAllCaps="true"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0.1"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#ffffff"
                                android:id="@+id/error_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="ERR_001"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0.05"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Button
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/btn_dismiss"
                    android:background="@drawable/glow_background"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="DISMISS"
                    android:fontFamily="@font/roboto"
                    android:elevation="4dp"
                    android:letterSpacing="0.1"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/dismiss_overlay"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
