<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#1a1f2e"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffd700"
                android:id="@+id/timeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="14:32:45"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.05"/>
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/talkgroupText"
                android:background="@drawable/talkgroup_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TG: 91"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.03"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="��️"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/callsignText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="KJ4ABC"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.05"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/durationText"
                android:background="@drawable/duration_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:15"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.03"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="��"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#b0ffffff"
                android:id="@+id/locationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="John Smith, Atlanta, GA"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.02"/>
        </LinearLayout>
        <View
            android:background="#1affd700"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="#4caf50"
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="✓ Complete"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.03"/>
            <TextView
                android:textSize="10sp"
                android:textStyle="italic"
                android:textColor="#6b7280"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double-tap for details"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.02"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
