<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#1a1f2e"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/multirx_header"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/channelNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="10dp"
                    android:letterSpacing="0.02"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#b0ffffff"
                    android:id="@+id/channelSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"
                    android:letterSpacing="0.03"/>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/multirx_badge"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MULTI-RX"
                android:letterSpacing="0.1"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/frequencySection"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_frequency"
                    android:layout_marginEnd="12dp"
                    app:tint="#ffd700"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ffd700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FREQUENCY"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:id="@+id/frequencyInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/frequencyDivider"
                android:background="#1affffff"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_multi_rx"
                    android:layout_marginEnd="12dp"
                    app:tint="#ff9800"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ff9800"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MULTI-RX STATUS"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:id="@+id/multiRxStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#1affffff"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_group"
                    android:layout_marginEnd="12dp"
                    app:tint="#4caf50"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#4caf50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRIMARY CONTACT"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:id="@+id/primaryContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/multiContactsContainer"
                android:background="@drawable/rounded_background_dark"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_list"
                        android:layout_marginEnd="8dp"
                        app:tint="#64b5f6"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#64b5f6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MONITORED GROUPS"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:id="@+id/multiContactsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.4"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/multiRxStatusContainer"
            android:background="#1aff9800"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/multiRxIndicator"
                android:background="@drawable/circle_indicator_orange"
                android:visibility="gone"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#ff9800"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi-RX Active"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.05"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
