<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/map_overlay_background"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:elevation="8dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <ImageView
                android:id="@+id/buttonBack"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_backward_arrow"
                app:tint="#ffffff"/>
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Repeater Map"
                android:layout_weight="1"
                android:layout_marginStart="12dp"/>
            <TextView
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="��"/>
        </LinearLayout>
        <TextView
            android:textSize="14sp"
            android:textColor="#e0e0e0"
            android:id="@+id/locationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Getting location..."/>
        <TextView
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#ffc107"
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Initializing..."/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <Button
            android:textSize="18sp"
            android:id="@+id/btnMyLocation"
            android:background="@drawable/map_fab_background"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:text="��"
            android:elevation="6dp"/>
        <Button
            android:textSize="18sp"
            android:id="@+id/btnRefresh"
            android:background="@drawable/map_fab_background"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:text="��"
            android:elevation="6dp"/>
        <Button
            android:textSize="16sp"
            android:id="@+id/btnShowAll"
            android:background="@drawable/map_fab_background"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="��️"
            android:elevation="6dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/map_overlay_background"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:elevation="8dp">
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Legend"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <View
                android:background="#0078ff"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DMR"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <View
                android:background="#00b400"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FM"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:background="#3b82f6"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
