<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#1a1f2e"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/roipheader"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/channelNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="10dp"
                android:letterSpacing="0.02"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#b0ffffff"
                android:id="@+id/channelSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="ROIP Radio Channel"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="20dp"
                android:letterSpacing="0.03"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_network"
                    android:layout_marginEnd="12dp"
                    app:tint="#ffffff"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#64b5f6"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NETWORK"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:id="@+id/networkInfo"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto_regular"
                        android:autoSizeTextType="uniform"
                        android:autoSizeStepGranularity="0.5dp"
                        android:autoSizeMinTextSize="10dp"
                        android:autoSizeMaxTextSize="22dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#1affffff"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_group"
                    android:layout_marginEnd="12dp"
                    app:tint="#ffffff"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#66bb6a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TALKGROUP"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:id="@+id/talkgroupInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/connectionStatusContainer"
            android:background="#1a66bb6a"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/statusIndicator"
                android:background="@drawable/circle_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#66bb6a"
                android:id="@+id/connectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:letterSpacing="0.05"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
