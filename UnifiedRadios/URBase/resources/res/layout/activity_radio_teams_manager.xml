<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#1e293b"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#3b82f6"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="�� RadioTeams Manager"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#94a3b8"
                android:gravity="center"
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Welcome to RadioTeams"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp">
        <Button
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:id="@+id/btnAddTeam"
            android:background="@drawable/button_primary"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="➕ Add Team"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>
        <Button
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:id="@+id/btnRefreshTeams"
            android:background="@drawable/button_secondary"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="�� Refresh"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:indeterminate="true"
        android:layout_marginHorizontal="16dp"
        style="?android:attr/progressBarStyleHorizontal"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:elevation="8dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="#1e293b"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#f1f5f9"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Teams"/>
            <ListView
                android:id="@+id/lvSavedTeams"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#334155"
                android:dividerHeight="1dp"
                android:paddingHorizontal="8dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/layoutNoTeams"
                android:padding="32dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="48sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="��"/>
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#94a3b8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="No teams added yet"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#64748b"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap &apos;Add Team&apos; to get started"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
