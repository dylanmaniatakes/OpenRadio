<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/message_header_gradient"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/satellite_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ISS"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#666"
                android:id="@+id/signal_strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Signal"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/satellite_status"
                android:background="@drawable/glow_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="�� LIVE"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/timing_bg"
                android:padding="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ELEVATION"/>
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:id="@+id/elevation_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45.0°"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/timing_bg"
                android:padding="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp">
                <TextView
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AZIMUTH"/>
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:id="@+id/azimuth_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="180°"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/timing_bg"
                android:padding="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp">
                <TextView
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RANGE"/>
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:id="@+id/range_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450 km"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altitude: "/>
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/altitude_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="420 km"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position: "
                android:layout_marginStart="16dp"/>
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/position_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="40.7128°, -74.0060°"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/frequency_box_bg"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="�� Frequencies"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#007bff"
                android:id="@+id/frequency_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="↑ 145.200 MHz FM\10↓ 145.800 MHz FM"
                android:fontFamily="monospace"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#666"
                android:id="@+id/satellite_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="International Space Station"/>
            <Button
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/AmSattoRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Set Radio to Frequencies"
                android:backgroundTint="#ffa014"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
