<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0d1117"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/message_header_gradient"
                    android:padding="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_message"
                            android:layout_marginEnd="12dp"
                            app:tint="#64b5f6"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#64b5f6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FROM"
                                android:textAllCaps="true"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0.1"/>
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:id="@+id/textFromCallsign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="CALLSIGN"
                                android:shadowColor="#80000000"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="4"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0.02"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:background="@drawable/message_type_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MESSAGE"
                            android:letterSpacing="0.1"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_group"
                            android:layout_marginEnd="12dp"
                            app:tint="#ffd700"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#ffd700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SUBJECT"
                                android:textAllCaps="true"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0.1"/>
                            <TextView
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:id="@+id/textSubject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Subject"
                                android:shadowColor="#80000000"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="4"
                                android:fontFamily="@font/roboto"
                                android:letterSpacing="0.02"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_frequency"
                            android:layout_marginEnd="12dp"
                            app:tint="#ff9800"/>
                        <TextView
                            android:textSize="11sp"
                            android:textColor="#ff9800"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RECEIVED"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"
                            android:layout_marginEnd="8dp"
                            android:letterSpacing="0.1"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#b0ffffff"
                            android:id="@+id/textDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date/Time"
                            android:fontFamily="@font/roboto_regular"
                            android:letterSpacing="0.03"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/actionButtonsContainer"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/buttonReply"
                android:background="@drawable/roipheader"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="REPLY"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:drawablePadding="8dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto"
                android:layout_marginEnd="8dp"
                android:drawableTint="#ffffff"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>
            <TextView
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/buttonForward"
                android:background="@drawable/roipheader"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FORWARD"
                android:drawableLeft="@android:drawable/ic_menu_share"
                android:drawablePadding="8dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="8dp"
                android:drawableTint="#ffffff"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_message"
                        android:layout_marginEnd="12dp"
                        app:tint="#4caf50"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#4caf50"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="MESSAGE CONTENT"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:id="@+id/textMessageBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Message body"
                        android:lineSpacingMultiplier="1.5"
                        android:textIsSelectable="true"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="#1a4caf50"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <View
                        android:background="@drawable/circle_indicator_green"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#4caf50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message Delivered"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.05"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_message"
                        android:layout_marginEnd="12dp"
                        app:tint="#ff9800"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ff9800"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMAGES"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/imageContainer"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
