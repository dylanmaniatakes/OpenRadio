<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#1f2937"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3b82f6"
            android:id="@+id/tvMemberCallsign"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Callsign"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#f9fafb"
            android:id="@+id/tvMemberStatus"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#9ca3af"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary Role:"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#f9fafb"
            android:id="@+id/tvMemberRole"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Role"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#9ca3af"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organization:"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#f9fafb"
            android:id="@+id/tvMemberOrganization"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organization"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#9ca3af"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Type:"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#f9fafb"
            android:id="@+id/tvMemberVehicle"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#9ca3af"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Self-Sustaining Duration:"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#f9fafb"
            android:id="@+id/tvMemberSupplies"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplies"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#9ca3af"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specialized Skills:"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#f9fafb"
            android:id="@+id/tvMemberSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills"/>
    </LinearLayout>
</ScrollView>
