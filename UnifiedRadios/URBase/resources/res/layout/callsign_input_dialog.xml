<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/system_accent3_900"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#e6ffffff"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1a1f2e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Callsign Lookup"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:letterSpacing="0.02"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#546e7a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Enter a callsign to lookup information"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#e6ffffff"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#546e7a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Callsign"
                android:fontFamily="@font/roboto"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f5f5f5"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">
                <EditText
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1a1f2e"
                    android:textColorHint="#757575"
                    android:id="@+id/callsign_input"
                    android:background="@android:color/transparent"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Callsign (e.g., W1AW)"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:inputType="textCapCharacters"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.1"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="12sp"
                android:textColor="#9e9e9e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="â€¢ Enter callsign"
                android:lineSpacingMultiplier="1.2"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
