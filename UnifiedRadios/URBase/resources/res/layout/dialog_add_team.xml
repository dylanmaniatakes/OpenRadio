<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Team ID"/>
    <EditText
        android:id="@+id/etTeamId"
        android:background="@drawable/glow_background"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter Team ID"
        android:maxLines="1"
        android:inputType="textNoSuggestions"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Your Callsign"/>
    <EditText
        android:id="@+id/etCallsign"
        android:background="@drawable/glow_background"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter Your Callsign"
        android:maxLines="1"
        android:inputType="textNoSuggestions"/>
    <CheckBox
        android:textSize="14sp"
        android:id="@+id/cbAutoConnect"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Auto-connect to this team"/>
    <TextView
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="#666666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Note: Team credentials will be validated before adding to your list."/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"/>
</LinearLayout>
