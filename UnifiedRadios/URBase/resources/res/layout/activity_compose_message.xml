<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0d1117"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/compose_header_gradient"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Message"
                            android:shadowColor="#80000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="4"
                            android:fontFamily="@font/roboto"
                            android:letterSpacing="0.02"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="@drawable/compose_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMPOSE"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="12dp"
                        app:tint="#64b5f6"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#64b5f6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RECIPIENT"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/input_field_background"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="To Callsign or Name"
                        app:boxBackgroundMode="none"
                        app:boxStrokeColor="#64b5f6"
                        app:hintTextColor="#b0ffffff">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textColor="#ffffff"
                            android:textColorHint="#80ffffff"
                            android:id="@+id/editToCallsign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <ImageView
                        android:id="@+id/validationStatusIcon"
                        android:visibility="gone"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_check_circle"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/validationStatusText"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User validated"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/userSuggestionsCard"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:layout_marginEnd="8dp"
                        app:tint="#ffd700"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="#ffd700"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SELECT USER"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.05"/>
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/userCountText"
                        android:background="@drawable/badge_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/roboto"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
                        android:scrollbarTrackVertical="@drawable/scrollbar_track"
                        android:scrollbarStyle="outsideOverlay"
                        android:id="@+id/userSuggestionsRecyclerView"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="300dp"
                        android:fadeScrollbars="false"
                        android:overScrollMode="ifContentScrolls"
                        android:nestedScrollingEnabled="true"/>
                    <View
                        android:layout_gravity="end"
                        android:background="#30ffffff"
                        android:visibility="gone"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"/>
                </FrameLayout>
                <TextView
                    android:textSize="10sp"
                    android:textColor="#80ffffff"
                    android:gravity="center"
                    android:id="@+id/scrollHintText"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Scroll to see more users"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_subject"
                        android:layout_marginEnd="12dp"
                        app:tint="#ffd700"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ffd700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUBJECT"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/input_field_background"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subject"
                        app:boxBackgroundMode="none"
                        app:boxStrokeColor="#ffd700"
                        app:hintTextColor="#b0ffffff">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textColor="#ffffff"
                            android:textColorHint="#80ffffff"
                            android:id="@+id/editSubject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_message"
                        android:layout_marginEnd="12dp"
                        app:tint="#4caf50"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#4caf50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MESSAGE CONTENT"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/message_input_background"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Short Message"
                        app:boxBackgroundMode="none"
                        app:boxStrokeColor="#4caf50"
                        app:hintTextColor="#b0ffffff">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textColor="#ffffff"
                            android:textColorHint="#80ffffff"
                            android:gravity="top"
                            android:id="@+id/editMessage"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textMultiLine"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_attach_file"
                        android:layout_marginEnd="12dp"
                        app:tint="#ff9800"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ff9800"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ATTACHMENTS"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/cameraButton"
                        android:background="@drawable/attachment_button_background"
                        android:padding="12dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_camera"
                            android:layout_marginEnd="8dp"
                            app:tint="#ffffff"/>
                        <TextView
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CAMERA"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/galleryButton"
                        android:background="@drawable/attachment_button_background"
                        android:padding="12dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_photo_library"
                            android:layout_marginEnd="8dp"
                            app:tint="#ffffff"/>
                        <TextView
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GALLERY"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/attachImageButton"
                    android:background="@drawable/attachment_button_background"
                    android:padding="16dp"
                    android:focusable="true"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_add_photo"
                        android:layout_marginEnd="12dp"
                        app:tint="#ffffff"/>
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD PHOTO"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/selectedImagePreview"
                    android:background="@drawable/glow_background"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/removeImageButton"
                    android:background="@drawable/remove_button_background"
                    android:padding="12dp"
                    android:focusable="true"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="REMOVE IMAGE"
                    android:textAllCaps="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#1a1f2e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:layout_marginEnd="12dp"
                        app:tint="#ff5722"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ff5722"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SECURITY"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_field_background"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkboxHighSensitivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:layout_marginEnd="12dp"
                        android:buttonTint="#ff5722"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Is this message highly sensitive?"
                            android:fontFamily="@font/roboto"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="#b0ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="If enabled, this message will be encrypted with enhanced security protocols to secure the transmission of your message."
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/encryptionStatusLayout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_lock"
                        android:layout_marginEnd="8dp"
                        app:tint="#4caf50"/>
                    <TextView
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#4caf50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIGH ENCRYPTION ENABLED"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/send_button_gradient"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_send"
                    android:layout_marginEnd="12dp"
                    app:tint="#ffffff"/>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/buttonSend"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEND MESSAGE"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
