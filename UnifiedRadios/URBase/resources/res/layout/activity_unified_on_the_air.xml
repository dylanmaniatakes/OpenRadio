<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#1e293b"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#3b82f6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="�� Unfied Radios - On the Air"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="11sp"
                    android:textColor="#ffffff"
                    android:id="@+id/btnFilterOptions"
                    android:background="@drawable/button_primary"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="�� Filters"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="12dp"/>
                <Switch
                    android:textSize="11sp"
                    android:textColor="#94a3b8"
                    android:id="@+id/switchShowOffline"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offline"
                    android:thumbTint="#3b82f6"
                    android:trackTint="#475569"/>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="#94a3b8"
                android:id="@+id/tvStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Loading user statistics..."/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1.4"
        android:elevation="8dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="16dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <org.osmdroid.views.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_gravity="end|bottom"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#3b82f6"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp">
                    <ImageButton
                        android:id="@+id/btnMyLocation"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:contentDescription="My Location"
                        app:tint="#ffffff"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#10b981"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp">
                    <ImageButton
                        android:id="@+id/btnRefresh"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_popup_sync"
                        android:contentDescription="Refresh"
                        app:tint="#ffffff"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="#f59e0b"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp">
                    <ImageButton
                        android:id="@+id/btnShowAll"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_menu_mapmode"
                        android:contentDescription="Show All Users"
                        app:tint="#ffffff"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:elevation="8dp"
        android:layout_marginHorizontal="8dp"
        app:cardBackgroundColor="#1e293b"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#f1f5f9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Active Users"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="#94a3b8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="�� Online Now  �� Online  ⚫ Offline"/>
            </LinearLayout>
            <ListView
                android:id="@+id/lvActiveUsers"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#334155"
                android:dividerHeight="1dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
