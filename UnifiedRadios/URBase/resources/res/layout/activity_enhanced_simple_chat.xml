<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0d1117"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="#1a1f2e"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/buttonBack"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_backward_arrow"
            android:layout_marginEnd="16dp"
            app:tint="#ffffff"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/avatarText"
            android:background="@drawable/glow_background"
            android:visibility="gone"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text=""
            android:layout_marginEnd="12dp"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="KC1ABC"
            android:layout_weight="1"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewChat"
                android:padding="16dp"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <FrameLayout
            android:id="@+id/attachmentMenuOverlay"
            android:background="#80000000"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_gravity="start|top"
                android:orientation="vertical"
                android:id="@+id/attachmentMenuContainer"
                android:background="@drawable/attachment_menu_background"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/menuItemCamera"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="200dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_camera"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/white"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camera"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/menuItemGallery"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="200dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_image"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/white"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photo Library"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/menuItemLocation"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="200dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/location_share_normal"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/white"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send Location"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/menuItemDMR"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/unified"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/white"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(ROIP) Send Invite"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:id="@+id/typingContainer"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.unified.ur1.chat.TypingBubbleView
            android:id="@+id/typingBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="italic|bold"
            android:textColor="#bdbcbc"
            android:id="@+id/typingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KC1ABC is typing..."/>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/bottomButtons"
        android:background="#1a1f2e"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/buttonAttachment"
            android:background="@drawable/attachment_button_background"
            android:padding="2dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/ic_add"
            android:layout_marginEnd="8dp"
            app:tint="#b0ffffff"/>
        <EditText
            android:textColor="#ffffff"
            android:textColorHint="#b0ffffff"
            android:id="@+id/editMessage"
            android:background="@drawable/button_background_dark"
            android:padding="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Type a message..."
            android:maxLines="3"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/buttonSend"
            android:background="@drawable/button_background_dark"
            android:padding="8dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/ic_send"
            app:tint="#ffffff"/>
    </LinearLayout>
</LinearLayout>
