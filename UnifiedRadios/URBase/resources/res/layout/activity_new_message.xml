<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0d1117"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="#1a1f2e"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/buttonClose"
            android:background="@drawable/circular_button_background"
            android:padding="6dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"
            app:tint="#ffffff"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Message"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"/>
        <View
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#1a1f2e"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="#b0ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To:"
            android:fontFamily="@font/roboto"
            android:layout_marginEnd="12dp"/>
        <EditText
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textColorHint="#64b5f6"
            android:id="@+id/editToCallsign"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter callsign..."
            android:layout_weight="1"
            android:inputType="textCapCharacters"
            android:fontFamily="@font/roboto"/>
        <ImageView
            android:id="@+id/buttonAddContact"
            android:background="@drawable/circular_button_background"
            android:padding="6dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Add contact"
            app:tint="#64b5f6"/>
    </LinearLayout>
    <View
        android:background="#2a2f3e"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/suggestionsContainer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:background="#1a1f2e"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#b0ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggested Contacts"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggestionsRecyclerView"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/mainContentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/emptyState"
            android:padding="32dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_message"
                app:tint="#444446"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#b0ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start typing a callsign to find contacts"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#64b5f6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Or select from nearby contacts below"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/nearbyContactsSection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_vertical"
                android:background="#1a1f2e"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/location_share_normal"
                    android:layout_marginEnd="8dp"
                    app:tint="#64b5f6"/>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#b0ffffff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nearby Contacts"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"/>
                <ImageView
                    android:id="@+id/buttonRefreshNearby"
                    android:background="@drawable/circular_button_background"
                    android:padding="4dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_refresh"
                    android:contentDescription="Refresh nearby contacts"
                    app:tint="#64b5f6"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/nearbyLoadingContainer"
                android:padding="32dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="16dp"
                    android:indeterminateTint="#64b5f6"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#b0ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finding nearby contacts..."
                    android:fontFamily="@font/roboto"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nearbyContactsRecyclerView"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/nearbyErrorContainer"
                android:padding="32dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_error"
                    app:tint="#ff6b6b"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#ff6b6b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unable to load nearby contacts"
                    android:fontFamily="@font/roboto"
                    android:textAlignment="center"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#b0ffffff"
                    android:id="@+id/nearbyErrorMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tap refresh to try again"
                    android:fontFamily="@font/roboto"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
