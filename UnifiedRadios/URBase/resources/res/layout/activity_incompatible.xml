<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e53e3e"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="#cc000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/notcompatible"
        android:background="@drawable/rounded_corners"
        android:padding="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:backgroundTint="#ffffff"
        android:layout_marginHorizontal="32dp">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/circle_rx"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="Warning"
            android:backgroundTint="#e53e3e"
            app:tint="#ffffff"/>
        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1a1f2e"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEVICE NOT COMPATIBLE"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.02"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#546e7a"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/incompatibilitySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="This device does not meet the minimum requirements"
            android:fontFamily="@font/roboto"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#1a1f2e"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/incompatibilityDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Please contact support for assistance or try using a different device."
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/roboto"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1a1f2e"
            android:id="@+id/InCompDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Device"
            android:textAlignment="center"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#e53e3e"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/contactSupportButton"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACT SUPPORT"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.03"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#1affffff"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1a1f2e"
                    android:id="@+id/retryButton"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RETRY"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.03"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/incompatibilityProgress"
            android:visibility="gone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:indeterminateTint="#e53e3e"
            android:indeterminateTintMode="src_atop"/>
    </LinearLayout>
</FrameLayout>
