<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardBackgroundColor="#1a1f2e"
    app:cardCornerRadius="0dp"
    app:cardElevation="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/roipheader"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unified Radios"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:letterSpacing="0.02"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#b0ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Device Authentication"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:letterSpacing="0.03"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    android:layout_marginEnd="12dp"
                    app:tint="#ffffff"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#64b5f6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEVICE CODE"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/accessCodeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.05"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#1affffff"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    app:tint="#66bb6a"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#66bb6a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VALIDATION CODE"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/validationCodeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <com.google.android.material.button.MaterialButton
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/validateButton"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="Validate Device"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.02"
                    app:backgroundTint="#2196f3"
                    app:cornerRadius="28dp"
                    app:elevation="6dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="#ffffff"
                    app:rippleColor="#80ffffff"/>
                <com.google.android.material.button.MaterialButton
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/valclosebutton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Close"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.02"
                    app:backgroundTint="#ff5722"
                    app:cornerRadius="28dp"
                    app:elevation="6dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="#ffffff"
                    app:rippleColor="#80ffffff"
                    app:strokeWidth="0dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/statusContainer"
            android:background="#1a64b5f6"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/statusIndicator"
                android:background="@drawable/circle_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#64b5f6"
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.05"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
