<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/talkgroupCard"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="#1a1f2e"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/selectionIndicator"
            android:background="#64b5f6"
            android:visibility="invisible"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/talkgroupId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TG 12345"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="#66bb6a"
                    android:id="@+id/talkgroupNetwork"
                    android:background="@drawable/network_badge_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Network"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.1"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"/>
            </LinearLayout>
            <TextView
                android:textSize="14sp"
                android:textColor="#ccffffff"
                android:ellipsize="end"
                android:id="@+id/talkgroupDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Talkgroup Description"
                android:maxLines="2"
                android:fontFamily="@font/roboto_regular"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#80ffffff"
                android:ellipsize="end"
                android:id="@+id/talkgroupFullDescription"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Description"
                android:maxLines="1"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_radio"
            android:layout_marginStart="12dp"
            app:tint="#80ffffff"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
