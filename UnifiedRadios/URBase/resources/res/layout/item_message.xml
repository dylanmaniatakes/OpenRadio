<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewMessage"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#1a1f2e"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/teamContainer"
            android:background="#332196f3"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/teamIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_group"
                android:layout_marginEnd="8dp"
                app:tint="#fafafa"/>
            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/teamLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RADIOTEAMS MESSAGE"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.1"/>
            <View
                android:background="@drawable/circle_indicator_blue"
                android:visibility="gone"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/highSensitivityContainer"
            android:background="#33ff5722"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_security"
                android:layout_marginEnd="8dp"
                app:tint="#ff5722"/>
            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#ff5722"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGHLY SENSITIVE MESSAGE"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.1"/>
            <View
                android:background="@drawable/circle_indicator_red"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/headerContainer"
            android:background="@drawable/message_header_gradient"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/priorityIndicator"
                android:background="@drawable/priority_gradient"
                android:layout_width="4dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/textFromCallsign"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="FROM_CALLSIGN"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4"
                        android:drawablePadding="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.02"/>
                    <ImageView
                        android:id="@+id/headerAttachmentIndicator"
                        android:visibility="gone"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_attach_file"
                        android:contentDescription="Has attachments"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#ff9800"/>
                    <ImageView
                        android:id="@+id/highSensitivityIndicator"
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_security"
                        android:contentDescription="High sensitivity message"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#ff5722"/>
                    <ImageView
                        android:id="@+id/buttonDelete"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_delete"
                        android:contentDescription="Delete message"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#ff6b6b"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#b0ffffff"
                        android:id="@+id/textTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:34 PM"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.03"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#b0ffffff"
                        android:ellipsize="end"
                        android:id="@+id/textSubject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Subject"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.03"/>
                    <ImageView
                        android:id="@+id/buttonStartChat"
                        android:background="@drawable/glow_background"
                        android:padding="6dp"
                        android:visibility="gone"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_chat_notification"
                        android:contentDescription="Start chat"
                        android:layout_marginStart="8dp"
                        app:tint="#64b5f6"/>
                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/highSensitivityLabel"
                        android:background="@drawable/high_sensitivity_badge"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="�� SECURE"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="3dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/textMessageType"
                android:background="@drawable/message_type_badge"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:letterSpacing="0.1"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/contentContainer"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_message"
                    android:layout_marginEnd="12dp"
                    app:tint="#64b5f6"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#64b5f6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MESSAGE PREVIEW"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:ellipsize="end"
                        android:id="@+id/textPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Message preview..."
                        android:maxLines="2"
                        android:lineSpacingMultiplier="1.4"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#1affffff"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background_dark"
                android:padding="16dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginEnd="8dp"
                        app:tint="#ffd700"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ffd700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/quickActionsContainer"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/buttonToggleRead"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_view"
                        android:contentDescription="Toggle read status"
                        android:layout_marginEnd="8dp"
                        app:tint="#4caf50"/>
                    <ImageView
                        android:id="@+id/buttonReply"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_revert"
                        android:contentDescription="Reply to message"
                        android:layout_marginEnd="8dp"
                        app:tint="#2196f3"/>
                    <ImageView
                        android:id="@+id/buttonForward"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_send"
                        android:contentDescription="Forward message"
                        android:layout_marginEnd="8dp"
                        app:tint="#ff9800"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/imageAttachment"
                    android:visibility="gone"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_attachment"
                    android:layout_marginEnd="8dp"
                    app:tint="#ff9800"/>
                <View
                    android:id="@+id/unreadIndicator"
                    android:background="@drawable/circle_indicator_blue"
                    android:visibility="visible"
                    android:layout_width="8dp"
                    android:layout_height="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/messageStatusContainer"
            android:background="#1a4caf50"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@drawable/circle_indicator_green"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#4caf50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message Read"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto"
                android:letterSpacing="0.05"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
