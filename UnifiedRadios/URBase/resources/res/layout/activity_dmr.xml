<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fafbff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/status_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="#3f51b5"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/connection_status_icon"
                    android:visibility="gone"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_dialog_alert"
                    android:tint="#f44336"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:textSize="24sp"
                    android:textColor="#faf7f7"
                    android:id="@+id/connection_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected!"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
            <TextView
                android:textSize="14sp"
                android:textColor="#e8eaf6"
                android:id="@+id/server_info"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:fontFamily="sans-serif"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#aeea00"
                android:id="@+id/current_speaker"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="No Active Call"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/settings_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/status_card">
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="#3f51b5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DMR Settings"
                android:fontFamily="sans-serif-medium"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talkgroup:"
                    android:fontFamily="sans-serif"/>
                <EditText
                    android:enabled="false"
                    android:textSize="15sp"
                    android:id="@+id/talkgroup_edit"
                    android:background="#f5f5f5"
                    android:padding="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Talkgroup ID"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color Code:"
                    android:fontFamily="sans-serif"/>
                <Spinner
                    android:enabled="false"
                    android:id="@+id/color_code_spinner"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timeslot:"
                    android:fontFamily="sans-serif"/>
                <Spinner
                    android:enabled="false"
                    android:id="@+id/timeslot_spinner"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/connection_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/settings_card">
        <com.google.android.material.button.MaterialButton
            android:textSize="16sp"
            android:id="@+id/connect_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Connect"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#3f51b5"
            app:cornerRadius="12dp"
            app:elevation="2dp"/>
        <com.google.android.material.button.MaterialButton
            android:enabled="false"
            android:textSize="16sp"
            android:id="@+id/disconnect_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Disconnect"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="8dp"
            android:backgroundTint="#9e9e9e"
            app:cornerRadius="12dp"
            app:elevation="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/custom_server_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/connection_controls">
        <TextView
            android:textSize="18sp"
            android:textColor="#3f51b5"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Custom Server"
            android:fontFamily="sans-serif-medium"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginEnd="8dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="#3f51b5"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/server_address_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3103.amcomm.network"
                    android:hint="Server address"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:fontFamily="sans-serif"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="#3f51b5"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/server_port_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="62031"
                    android:hint="Port"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:fontFamily="sans-serif"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:textSize="16sp"
            android:id="@+id/custom_connect_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Connect to Custom Server"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#3f51b5"
            app:cornerRadius="12dp"
            app:elevation="2dp"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:textSize="28sp"
        android:id="@+id/ptt_button"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="32dp"
        android:text="PTT"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="#e0e0e0"
        app:cornerRadius="100dp"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#3f51b5"
        app:strokeWidth="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
